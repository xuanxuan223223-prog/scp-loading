    <script>
        // GMod 会自动调用这个函数来更新进度
        function GameDetails(servername, serverurl, mapname, maxplayers, steamid, gamemode) {
            // 这里可以获取服务器名字，如果你想显示的话
        }

        function SetStatusChanged(status) {
            document.getElementById('status').innerText = status.toUpperCase();
        }

        function DownloadingFile(fileName) {
            document.getElementById('status').innerText = "DOWNLOADING: " + fileName.toUpperCase();
        }

        // 这是一个估算的进度更新，GMod实际上不直接给百分比，通常靠文件数估算
        // 或者简单的让它动起来装装样子
        var filesTotal = 50; // 假设的文件数
        var filesLeft = 50;

        function SetFilesTotal(total) {
            filesTotal = total;
            filesLeft = total;
        }

        function SetFilesNeeded(needed) {
            filesLeft = needed;
            var percentage = 100 - Math.round((filesLeft / filesTotal) * 100);
            // 简单的防回退逻辑
            var currentWidth = document.getElementById('loadbar').style.width;
            if(percentage > parseInt(currentWidth)) {
                document.getElementById('loadbar').style.width = percentage + '%';
            }
        }
    </script>
